<%= render 'shared/errors', obj: @user%>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 40vh;">
    
<div class="w-50 bg-white p-5 rounded shadow">
    <%= form_with(model: @user, local: true, data: { turbo: false }) do |form| %>
        <div class="row mb-3">
        <%= form.label :Username, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control", placeholder: "Enter a username" %>
        </div>
        </div>
        <div class="row mb-3">
        <%= form.label :Email, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>
        </div>
        <div class="row mb-3">
        <%= form.label :Password, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control", placeholder: "Choose your password" %>
        </div>
        </div>
        <div class="text-center">
            <%= form.submit @user.new_record? ? "Sign up" : "Update", class: "btn btn-custom btn-lg" %>
        </div>
    <% end %>
  </div>

</div>