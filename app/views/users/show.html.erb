<div class="container my-5 text-center">
    <h2> <%= @user.name %>,s profile</h2>
    
    <div class="profile">
        <img src="<%= gravatar_for(@user, size: 100) %>" class="img-thumbnail rounded-circle border" alt="User Avatar">
    </div>
    <% if logged_in? && @user == current_user%>
    <%= link_to "Edit your profile", edit_user_path, class: "btn btn-dark my-3" %>
    <% end %>
    <h4 class="mt-3">All articles</h4>
</div>

<div class="flickr_pagination mb-3">
    <%= will_paginate @articles, :container => false %>
</div>

<%= render "articles/article" %>

