<h2 class="text-center py-5">Log in for My Blog</h2>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 40vh;">
    
<div class="w-50 bg-white p-5 rounded shadow">
    <%= form_with(scope: :session, url: login_path, local: true, data: { turbo: false })  do |form| %>
        <div class="row mb-3">
            <%= form.label :email, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
        </div>

        <div class="row mb-3">
            <%= form.label :password, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>
        </div>

        <div class="text-center">
            <%= form.submit "Log in", class: "btn btn-success" %>
        </div>
    <% end %>
  </div>

</div>