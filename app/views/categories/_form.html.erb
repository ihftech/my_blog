<%= render 'shared/errors', obj: @category%>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 40vh;">
    
<div class="w-50 bg-white p-5 rounded shadow">
    <%= form_with(model: @category, local: true, data: { turbo: false }) do |form| %>
        <div class="row mb-3">
        <%= form.label :Category, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
            </div>
        </div>
        <div class="text-center">
            <%= form.submit class: "btn btn-custom btn-lg" %>
        </div>
    <% end %>
  </div>

</div>