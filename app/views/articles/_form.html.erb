<%= render 'shared/errors', obj: @article%>

<div class="container d-flex justify-content-center align-items-center">
    
<div class="w-75 bg-wh p-4 rounded shadow">
    <%= form_with(model: @article, local: true, data: { turbo: false }) do |form| %>
        <div class="row mb-3">
        <%= form.label :Title, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :title, class: "form-control", placeholder: "Enter article title" %>
            </div>
        </div>

        <div class="row mb-3">
        <%= form.label :Description, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_area :description, class: "form-control", placeholder: "Enter article description", rows: 6 %>
            </div>
        </div>
        
        <div class="row mb-3">
        <%= form.label :Category, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.collection_select :category_ids, Category.order(:name), :id, :name, {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, class: "form-select"} %>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col text-center">
                <%= form.submit @article.new_record? ? "Create" : "Update", class: "btn btn-custom btn-lg" %>
            </div>
        </div>
    <% end %>
  </div>

</div>